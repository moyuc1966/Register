page{
	font-weight: 300;
}
.ts{
	margin: 10px 0 15px 15px;
	color: #AAA;
	font-size: 16px;
	display: block;
	padding-bottom: 18px;
	border-bottom:1px solid #eee ;
}
.block{
	width: 95%;
	margin: 10px auto;
	padding: 10px;
	box-sizing: border-box;
	border-bottom: 1px solid #eee;
	display: flex;
	position: relative;
}
image{
	width: 10px;
	height: 14px;
	position: absolute;right: 30px;
	top: calc(50% - 7px);
}
.tit{
	width: 100px;
	display: block;
	color: #333;
	font-size: 16px;
	height: 30px;
	line-height: 30px;
	font-weight: 300;
}
.long{
	width: 200px;
}
picker{
	height: 30px;
	line-height: 30px;
	width: 100%;
	padding-left: 11px;
}
textarea{
	margin-top: 6px;
	width: calc(100% - 60px);
	min-height: 45px;
	display: block;
	height: auto;
	margin-left: 5px;
}
.con{ 
	min-height: 65px;
}
input{
	margin-top: -2px;
	width: calc(100% - 60px);
	height: 35px;
	display: block;
}
.button{
	height: 42px;
	width: 88%;
	margin: 20px auto 20px auto;
	background-color: #006eff;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 17px;
	border-radius: 5px;
}
.del{
	background-color: #e4efff !important;
	color: #006eff !important;
	margin-bottom: 60px;
}
.tw{
	background-color: #f7f7f8;
	padding: 15px;
	box-sizing: border-box;
	font-size: 12px;
	color: #aaa;
	line-height: 22px;
	margin: 20px auto;
	border-radius: 8px;
	width: 90%;
}
switch{
	position: absolute;right: 50px;
	top: calc(50% - 16px);
}
