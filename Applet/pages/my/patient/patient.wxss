.pat{
	width: 90%;
	height: 104px;
	border-radius: 4px;
	background-color: #f5f8ff;
	padding: 10px 20px;
	box-sizing: border-box;
	margin: 15px auto;
	display: flex;
	justify-content: space-between;
	align-items: center;
}
.patCont{
	display: flex;
	align-items: center;
}
.name{
	font-size: 16px;
	color: #555;
	margin-right: 10px;
	display: block;
}
.main{
	background-color: #fdfdff;
	width: 100%;
	height: 100%;
	padding-bottom: 30px;
}
.relation{
	display: block;
	padding: 3px 10px;
	border-radius: 20px;
	color: #006eff;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 12px;
	background-color: #e2ecff;
}
.card{
	font-size: 14px;
	color: #AAA;
	margin-top: 6px;
	display: block;
}
.change{
	width: 80px;
}
.change image{
	width: 20px;
	height: 20px;
	display: block;
	margin: 5px auto;
}
.change text{
	color: #333333;
	font-size: 12px;
	display: block;
	width: 100%;
	text-align: center;
}


.tap .tapLeft{
	width: 18px;
	height: 7px;
	border-radius: 3px;
	background-color: #006eff;
	margin-right: 10px;
}
.not{
	width: 100%;
	height: 300px;
	margin-top: 30px;
}
.not image{
	width: 100%;
}
.not text{
	font-size: 15px;
	color: #ccc;
	display: block;
	width: 100%;
	text-align: center;
	margin-top: 20px;
}
.top{
	width: 750rpx;
	height: 35px;
	background-color: #fbf0e9;
	color: #FF9138;
	line-height: 35px;
	padding-left: 25px;
	box-sizing: border-box;
	font-size: 14px;
}
.button{
	width: 88%;
	height: 41px;
	line-height: 41px;
	text-align: center;
	border-radius: 3px;
	background-color: #006eff;
	color: #fff;
	margin: 0 auto;
}
switch{
	margin-bottom: 8px;
	margin-left: calc(50% - 25px);
}