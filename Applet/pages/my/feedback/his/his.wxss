/* pages/my/feedback/his/his.wxss */
.not{
	width: 100%;
	height: 300px;
	margin-top: 30px;
}
.not image{
	width: 100%;
}
.not text{
	font-size: 15px;
	color: #ccc;
	display: block;
	width: 100%;
	text-align: center;
	margin-top: 20px;
}
.block{
	border: 1px solid #eee;
	width: 89%;
	padding: 10px 13px;
	box-sizing: border-box;
	margin: 15px auto;
	border-radius: 3px;
}
.top{
	display: flex;
	align-items: center;
	height: 35px;
	border-bottom: 1px solid #eee;
	position: relative;
	padding-bottom: 5px;
}
.top text{
	font-size: 14px;
	color: #9ab8ea;
}
.doctorName{
	margin-left: 15px;
}
.state{
	font-size: 12px;
	position: absolute;right: 15px;top: calc(50% - 12px);
}
.botm{
	padding: 1px 0;
	box-sizing: border-box;
}
.botm view{
	display: flex;
	padding: 4px 0;
	font-weight: 300;
	margin-top: 5px;
	line-height: 22px;
}
.ct{
	font-size: 16px;
	color: #333;
	display: block;
}
.tit{
	font-size: 13px;
	color: #AAAAAA;
	width: 65px;
	display: block;
	margin-left: 7px;
}
.con{
	font-size: 13px;
	color: #333;
	width: calc(100% - 70px);
	display: block;
}