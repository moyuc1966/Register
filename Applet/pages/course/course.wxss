.title{
	font-size: 17px;
	color: #000000;
	margin-left: 15px;
	margin-bottom: 10px;
	margin-top: 10px;
	display: block;
}
.block{
	display: flex;
	align-items: center;
	position: relative;
	height: 55px;
	padding-left: 30px;
	box-sizing: border-box;
	width: 100%;
	font-weight: 200;
	border-bottom: 1px solid #eee;
}
.block text{
	color: rgb(94, 94, 94);
	font-size: 16px;
	font-weight: 100;
}
.block image{
	width: 10px;
	height: 14px;
	position: absolute;top: 17.5px;right: 35px;
}