
.not{
	width: 100%;
	height: 300px;
	margin-top: 30px;
}
.not image{
	width: 100%;
}
.not text{
	font-size: 15px;
	color: #ccc;
	display: block;
	width: 100%;
	text-align: center;
	margin-top: 20px;
}

.block{
	width: 92%;
	height: auto;
	border-bottom: 1px solid #eee;
	margin: 10px auto;
	display: flex;
	padding: 10px;
	box-sizing: border-box;
	position: relative;
	flex-wrap: wrap;
	margin-bottom: 15px;
}
.block image{
	width: 85px;
	height: 65px;
	border-radius: 3px;
}
.block .cont{
	margin-left: 15px;
}
.block .tit{
	font-size: 15px;
	color: rgb(95, 94, 94);
	font-size: 100;
	overflow: hidden;
    -webkit-line-clamp: 2;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.cont view text{
	color: #ccc;
	font-size: 13px;
	display: block;
}
.cont view{
	position: absolute;
	bottom: 3px;
	display: flex;
	align-items: center;
	justify-content: space-between;
}
.time{
	margin-left: 10px;
}
.and{
	display: block;
	margin-bottom: 60px;
	margin-top: 30px;
	width: 100%;
	text-align: center;
	color: rgb(160, 160, 160);
	font-size: 12px;
}
.title{
	display: block;
	width: 100%;
	color:#3478F7;
	font-size: 17px;
}
.content{
	font-family: 'PingFangHK-Light', 'PingFang HK Light', 'PingFang HK';
    font-weight: 200;
	font-style: normal;
	color: #333;
	font-size: 15px;
	line-height: 20px;
	margin-top: 4px;
}