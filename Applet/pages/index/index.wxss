/* pages/index.wxss */
swiper{
	width: 95%;
	height: 150px;
	border-radius: 5px;
	overflow: hidden;
	margin: 10px auto ;
	border: 1px solid #eee;
}
swiper-item,swiper image{
	width: 100%;
	height: 100%;
}
.tap{
	width: 150px;
	height: 45px;
	display: flex;
	align-items: center;
	padding-left: 15px;
	font-size: 16px;
	color: #070707;
	box-sizing: border-box;
}
.tap .tapLeft{
	width: 18px;
	height: 7px;
	border-radius: 3px;
	background-color: #006eff;
	margin-right: 10px;
}
.zhu{
	width: 750rpx;
	height: 90px;
	display: flex;
	align-items: center;
	justify-content: space-between;
	padding: 0 15px;
	box-sizing: border-box;
}
.zhuBlock{
	width:calc(335rpx - 5px);
	height: 85px;
	display: flex;
	align-items: center;
	border-radius: 5px;
	padding: 10px;
	box-sizing: border-box;
	justify-content: space-between;
}
.zhuBlock view text{
	display: block;
}
.zhuTop{
	background-color: #fceff0;
	color: #f46767;
}
.zhubotm{
	background-color: #e8faf2;
	color: #2ed477;
}
.zhuImg{
	width: 36px;
	height: 36px;
	padding: 5px;
	background-color: #fbd3d4;
	border-radius: 50%;
	box-sizing: border-box;
}
.zhuImg2{
	background-color: #c2f2d9;
}
.tit{
	font-size: 17px;
	margin-bottom: 7px;
	letter-spacing: 2px;
}
.ftit{
	font-size: 12px;
	letter-spacing: 2px;
}
.mor{
	display: flex;
	padding: 10px;
	box-sizing: border-box;
	flex-wrap: wrap;
	justify-content: space-between;
}
.mor:after {
    display:block;
    content:"";
    width: 25%;
    height:0px;
}
.morBlock{
	width: 76px;
	height: 80px;
	border-radius: 3px;
	border: 1px solid #eee;
	margin: 10px 6px;
	position: relative;
}
.morBlock image{
	display: block;
	height: 29px;
	width: 28px;
	border-radius: 50%;
	background-color: #e6f1ff;
	margin: 10px auto 8px auto;
	padding: 3px;
}
.morBlock text{
	font-size: 12px;
	color: #858383;
	display: block;
	width: 100%;
	text-align: center;
}
.his image{
	padding: 4px;
	box-sizing: border-box;
}
.msgNum{
	width: 16px;
	height: 16px;
	font-size: 12px;
	border-radius: 8px;
	background-color: #f16365;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	position: absolute;right: 9px;
	top: 4px;
}
